{
  "name": "tanstarter",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && tsc --noEmit",
    "preview": "pnpm build && vite preview",
    "start": "node .output/server/index.mjs",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check-types": "tsc --noEmit",
    "check": "pnpm format && pnpm lint && pnpm check-types",
    "db": "drizzle-kit",
    "db:push": "pnpm db push",
    "db:push:remote": "NODE_ENV=production pnpm db push",
    "db:studio": "pnpm db studio",
    "db:studio:remote": "NODE_ENV=production pnpm db studio",
    "deps": "pnpm dlx npm-check-updates@latest --interactive --format group",
    "deps:major": "pnpm dlx taze@latest major -Ilw",
    "ui": "pnpm dlx shadcn@latest",
    "auth:secret": "pnpm dlx @better-auth/cli@latest secret",
    "auth:generate": "pnpm dlx @better-auth/cli@latest generate --config ./src/lib/auth/auth.ts --y --output ./src/lib/db/schema/auth.schema.ts && prettier --write ./src/lib/db/schema/auth.schema.ts",
    "cf:typegen": "wrangler types",
    "cf:secret": "wrangler secret",
    "cf:deploy": "pnpm build && wrangler deploy",
    "postinstall": "pnpm run cf:typegen"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/postcss": "^4.1.17",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@tanstack/react-router": "^1.139.14",
    "@tanstack/react-router-devtools": "^1.139.14",
    "@tanstack/react-router-ssr-query": "^1.139.14",
    "@tanstack/react-start": "^1.139.14",
    "better-auth": "^1.4.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.43.1",
    "framer-motion": "^12.23.25",
    "i18next": "^25.7.1",
    "lucide-react": "^0.507.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-i18next": "^16.4.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.17.0",
    "@eslint-react/eslint-plugin": "^2.3.12",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/devtools-vite": "^0.3.11",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@tanstack/eslint-plugin-router": "^1.139.0",
    "@tanstack/react-devtools": "^0.8.2",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@tanstack/react-router-devtools": "^1.139.14",
    "@types/node": "^22.15.14",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.6.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.53.0"
  }
}
